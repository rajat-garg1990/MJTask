<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:strokeColor="#000"
    app:strokeWidth="3dp"
    android:id="@+id/audioCard"
    app:cardBackgroundColor="#CDCBCB"
    app:cardElevation="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/audioImage"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:layout_width="120dp"
            android:id="@+id/text1"
            android:layout_height="wrap_content"
            android:text="Title :"
            android:layout_below="@id/audioImage"
            android:padding="5dp"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/audioTitle"
            android:textAlignment="viewStart"
            android:text="Title"
            android:padding="5dp"
            android:textSize="20sp"
            android:layout_below="@id/audioImage"
            android:layout_toEndOf="@id/text1"
            android:textColor="@color/black"/>
        <TextView
            android:layout_width="120dp"
            android:id="@+id/text2"
            android:layout_height="wrap_content"
            android:text="Artist :"
            android:layout_below="@id/text1"
            android:padding="5dp"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/audioArtist"
            android:layout_below="@id/audioTitle"
            android:textAlignment="viewStart"
            android:text="Artist"
            android:padding="5dp"
            android:textSize="20sp"
            android:layout_toEndOf="@id/text2"
            android:textColor="@color/black"/>
        <TextView
            android:layout_width="120dp"
            android:id="@+id/text3"
            android:layout_height="wrap_content"
            android:text="Collection :"
            android:layout_below="@id/text2"
            android:padding="5dp"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/audioCollection"
            android:textAlignment="viewStart"
            android:layout_below="@id/audioArtist"
            android:text="Collection"
            android:padding="5dp"
            android:textSize="20sp"
            android:layout_toEndOf="@id/text3"
            android:textColor="@color/black"/>
        <TextView
            android:layout_width="120dp"
            android:id="@+id/text4"
            android:layout_height="wrap_content"
            android:text="Released :"
            android:layout_below="@id/text3"
            android:padding="5dp"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/audioDate"
            android:textAlignment="viewStart"
            android:layout_below="@id/audioCollection"
            android:text="Release date"
            android:padding="5dp"
            android:textSize="20sp"
            android:layout_toEndOf="@id/text4"
            android:textColor="@color/black"/>
    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>